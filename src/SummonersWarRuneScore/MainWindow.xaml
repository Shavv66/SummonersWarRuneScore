<Window x:Class="SummonersWarRuneScore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
		mc:Ignorable="d"
        Title="MainWindow" Height="960" Width="1280" Loaded="Window_Loaded">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="50*" />
			<RowDefinition Height="5" />
			<RowDefinition Height="50*" />
		</Grid.RowDefinitions>

		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="50*" />
				<ColumnDefinition Width="25*" />
				<ColumnDefinition Width="25*"/>
			</Grid.ColumnDefinitions>

			<Grid.RowDefinitions>
				<RowDefinition Height="22" />
				<RowDefinition />
				<RowDefinition Height="22" />
			</Grid.RowDefinitions>

			<ComboBox Name="cbxRuneSet" Grid.ColumnSpan="1" SelectionChanged="cbxRuneSet_SelectionChanged" />
			<ListView Name="lvMonsterRoles" Grid.Row="1" Grid.RowSpan="2" />

			<Button Name="btnAdd" Content="Add New" Grid.Column="1" Grid.ColumnSpan="2" Click="btnAdd_Click" />

			<ScrollViewer Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition />
						<ColumnDefinition />
					</Grid.ColumnDefinitions>

					<StackPanel>
						<Label Content="HP:" Target="{Binding ElementName=tbHp}" />
						<xctk:DecimalUpDown Name="tbHp" />
						<Label Content="HP%:" Target="{Binding ElementName=tbHpPercent}" />
						<xctk:DecimalUpDown Name="tbHpPercent" />
						<Label Content="ATK:" Target="{Binding ElementName=tbAtk}" />
						<xctk:DecimalUpDown Name="tbAtk" />
						<Label Content="ATK%:" Target="{Binding ElementName=tbAtkPercent}" />
						<xctk:DecimalUpDown Name="tbAtkPercent" />
						<Label Content="DEF:" Target="{Binding ElementName=tbDef}" />
						<xctk:DecimalUpDown Name="tbDef" />
						<Label Content="DEF%:" Target="{Binding ElementName=tbDefPercent}" />
						<xctk:DecimalUpDown Name="tbDefPercent" />
						<Label Content="SPD:" Target="{Binding ElementName=tbSpd}" />
						<xctk:DecimalUpDown Name="tbSpd" />
					</StackPanel>
					<StackPanel Grid.Column="1">
						<Label Content="Cri Rate:" Target="{Binding ElementName=tbCriRate}" />
						<xctk:DecimalUpDown Name="tbCriRate" />
						<Label Content="Cri Dmg:" Target="{Binding ElementName=tbCriDmg}" />
						<xctk:DecimalUpDown Name="tbCriDmg" />
						<Label Content="Resistance:" Target="{Binding ElementName=tbResistance}" />
						<xctk:DecimalUpDown Name="tbResistance" />
						<Label Content="Accuracy:" Target="{Binding ElementName=tbAccuracy}" />
						<xctk:DecimalUpDown Name="tbAccuracy" />
					</StackPanel>
				</Grid>
			</ScrollViewer>

			<Button Name="btnDelete" Content="Delete" Grid.Column="1" Grid.Row="2" />
			<Button Name="btnSave" Content="Save" Grid.Column="2" Grid.Row="2" Click="btnSave_Click" />
		</Grid>

		<GridSplitter HorizontalAlignment="Stretch" Grid.Row="1" />

		<DataGrid Name="dtGrdRunes" Grid.Row="2" />
	</Grid>
</Window>
